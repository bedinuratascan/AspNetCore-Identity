@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Kullanıcılar</h2>
<hr/>
<table class="table table-bordered table-striped">
    <tr>
        <td>User ID</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Atama</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">There is no user</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-info" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a></td>
            </tr>
        }
    }
</table>

