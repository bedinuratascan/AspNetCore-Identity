@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <td>Id</td>
        <td>Rol İsmi</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">There is no role</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    }
</table>

<a asp-action="CreateRole" class="btn btn-info">Rol Oluştur</a>

