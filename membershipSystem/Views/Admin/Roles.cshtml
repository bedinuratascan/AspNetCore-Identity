@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <td>Id</td>
        <td>Rol İsmi</td>
        <td>Sil</td>
        <td>Güncelleme</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">There is no role</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <form asp-action="RoleDelete" asp-route-id="@item.Id" method="post">
                        <button class="btn btn-danger" type="submit">Sil</button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-success" asp-action="RoleUpdate" asp-route-id="@item.Id">
                        Güncelle
                    </a>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="CreateRole" class="btn btn-info">Rol Oluştur</a>

