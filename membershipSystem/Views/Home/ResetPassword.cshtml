@model membershipSystem.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "Success")
        {
            <div class="alert alert-info">Şifre yenileme linki e-mail adresinize gönderilmiştir.Lütfen e-mail adresinizi kontrol ediniz. </div>
        }
        else
        {
            <h4>Şifremi Unuttum!</h4>
            <hr />
            <div class="alert alert-info">
                Yeni şifre belirlemek için kayıtlı e-mail adresinizi giriniz.
                Şifre değiştirme linki e-mail adresinize gönderilecektir.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>


